<% layout('layout/boilerplate') -%>
<% block('head').append('<link crossorigin="anonymous" rel="stylesheet" href="/stylesheet/navbar.css">') %>
<% block('head').append('<link crossorigin="anonymous" rel="stylesheet" href="/stylesheet/newArticle.css">') %>
    <%- include('../partials/navbar.ejs') %>

<h2>Edit the Article</h2>
<form action="/news/newarticle" method="POST">
    <input type="text" name="title" placeholder="Title" value="<%-news.title %>" required>
    <input type="text" name="author" placeholder="Author" value="<%-news.author %>" required>
    <!-- <input type="text" name="category" placeholder="Category" required> -->
    <textarea name="content" placeholder="Content" rows="8" required><%-news.content %></textarea>
    <input type="text" name="imageUrl" placeholder="Image URL" value="<%-news.imageUrl %>">
    <input type="text" name="tags" placeholder="Tags (comma-separated)" value="<%-news.tags %>">
    <button type="submit">Add Article</button>
</form>
